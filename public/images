const getImageUrl = (description) => {
  switch (description) {
    case 'clear sky':
      return '/images/clear_sky.png';
    case 'few clouds':
    case 'scattered clouds':
    case 'broken clouds':
      return '/images/cloudy.png';
    case 'shower rain':
    case 'rain':
      return '/images/rain.png';
    case 'thunderstorm':
      return '/images/thunderstorm.png';
    case 'snow':
      return '/images/snow.png';
    case 'mist':
      return '/images/mist.png';
    default:
      return '/images/default_weather.png';
  }
};
